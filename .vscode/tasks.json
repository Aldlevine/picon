{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "pico_game"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$armcc5"
            ],
            "detail": "CMake template build task"
        },
        {
            "type": "cmake",
            "label": "CMake: clean rebuild",
            "command": "cleanRebuild",
            "targets": [
                "pico_game"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$armcc5"
            ],
            "detail": "CMake template clean rebuild task"
        },
        {
            "label": "Flash Binary",
            "group": "build",
            "command": "openocd",
            "args": [
                "-f", "interface/cmsis-dap.cfg",
                "-f", "target/rp2040.cfg",
                "-c", "adapter speed 5000",
                "-c", "program ${workspaceFolder}/build/pico_game.bin reset exit 0x10000000",
            ]
        },
    ]
}