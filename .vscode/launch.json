{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Pico + OpenOCD)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/pico_game.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath": "arm-none-eabi-gdb",
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg",
                "openocd-gdb.cfg",
            ],
            "svdFile": "${workspaceFolder}/pico-sdk/src/rp2040/hardware_regs/RP2040.svd",
            "openOCDLaunchCommands": [ "adapter speed 5000", ],
            "overrideLaunchCommands": [
                "monitor reset init",
                "load \"${workspaceFolder}/build/pico_game.elf\""
            ],
            "overrideRestartCommands": [
                "monitor reset init",
                "load \"${workspaceFolder}/build/pico_game.elf\"",
            ],
            "preLaunchTask": "CMake: build",
        }
    ]
}